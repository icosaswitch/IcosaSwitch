{
  "name": "IcosaSwitch",
  "version": "2.0.2",
  "productName": "IcosaSwitch",
  "description": "Tools for Switch Hacking",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:darwin": "electron-builder --mac",
    "install": "electron-rebuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IcosaSwitch/IcosaSwitch.git"
  },
  "author": "Pharuxtan",
  "license": "CC-BY-NC",
  "dependencies": {
    "cross-spawn": "^7.0.1",
    "decompress-zip": "^0.2.2",
    "ejs": "^2.6.1",
    "ejs-electron": "^2.0.3",
    "electron-updater": "^4.0.6",
    "fs": "0.0.1-security",
    "https-proxy-agent": "^3.0.1",
    "icsa": "^1.4.2",
    "jquery": "^3.4.0",
    "node-fetch": "^2.6.0",
    "path": "^0.12.7",
    "pretty-size": "^2.0.0",
    "prettysize": "^2.0.0",
    "rimraf": "^3.0.2",
    "url": "^0.11.0",
    "usb": "^1.6.2"
  },
  "devDependencies": {
    "electron": "^7.1.11",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.10.0"
  },
  "build": {
    "appId": "icosaswitch",
    "productName": "IcosaSwitch",
    "artifactName": "${productName}-${version}.${ext}",
    "copyright": "Copyright Â© 2020 IcosaSwitch",
    "npmRebuild": false,
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconTextSize": 15,
      "iconSize": 100,
      "window": {
        "width": 541,
        "height": 400
      }
    },
    "linux": {
      "target": "AppImage",
      "maintainer": "Pharuxtan",
      "vendor": "IcosaSwitch",
      "synopsis": "IcosaSwitch",
      "description": "Tools for Switch Hacking",
      "category": "Utility"
    },
    "files": [
      "!{dist,dev-app-update.yml,ulaunch,.github,icosaswitch.png,package-lock.json,README.md,.gitignore}"
    ],
    "compression": "maximum"
  },
  "bugs": {
    "url": "https://github.com/IcosaSwitch/IcosaSwitch/issues"
  },
  "homepage": "https://github.com/IcosaSwitch/IcosaSwitch#readme"
}
